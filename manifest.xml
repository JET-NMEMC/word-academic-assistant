<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="TaskPaneApp">
  <Id>5e84860b-8d7d-4a1e-8e5c-0c6d3f3f3f3f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>汉语作者英语写作助手</ProviderName>
  <DefaultLocale>zh-CN</DefaultLocale>
  <DisplayName DefaultValue="汉语作者英语写作助手" />
  <Description DefaultValue="为汉语学术作者提供补全润色和汉译英功能" />
  <IconUrl DefaultValue="https://lianj.github.io/word-academic-assistant/assets/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://lianj.github.io/word-academic-assistant/assets/icon-64.png" />
  <SupportUrl DefaultValue="https://www.example.com/help" />
  <AppDomains>
    <AppDomain>https://api.doubao.com</AppDomain>
    <AppDomain>https://ark.cn-beijing.volces.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Document" />
  </Hosts>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://lianj.github.io/word-academic-assistant/index.html" />
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <GetStarted>
            <Title DefaultValue="开始使用" />
            <Description DefaultValue="点击按钮打开写作助手。" />
            <LearnMoreUrl DefaultValue="https://www.example.com/learn-more" />
          </GetStarted>
          <FunctionFile resid="Commands.Url" />
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="GroupWritingAssistant">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Label" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>WritingAssistantTaskpane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://lianj.github.io/word-academic-assistant/assets/icon-16.png" />
        <bt:Image id="Icon.32x32" DefaultValue="https://lianj.github.io/word-academic-assistant/assets/icon-32.png" />
        <bt:Image id="Icon.80x80" DefaultValue="https://lianj.github.io/word-academic-assistant/assets/icon-80.png" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://lianj.github.io/word-academic-assistant/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://lianj.github.io/word-academic-assistant/index.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:ShortString id="GroupLabel" DefaultValue="学术助手" />
        <bt:ShortString id="TaskpaneButton.Label" DefaultValue="写作助手" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:LongString id="TaskpaneButton.Tooltip" DefaultValue="打开汉语作者英语写作助手侧边栏" />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>